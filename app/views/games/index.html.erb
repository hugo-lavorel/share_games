<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% if @games.size > 0%>
        <% @games.each do |game| %>
          <%= render 'shared/game-card', game: game %>
        <% end %>
      <% else %>
        <p>Sorry..</p>
        <p>There is no results for this game and/or location</p>
      <% end %>
    </div>
    <div class="col-6">
      <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
