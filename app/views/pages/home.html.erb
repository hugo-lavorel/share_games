<div class="banner">
  <div class="title-home">
    <div class="text-center">
      <h1>Game Share</h1>
      <h3>Trouves le jeu que tu veux proche de chez toi</h3>
    </div>

    <div class="navbar-search-home">
      <%#= simple_form_for :search, url: search_path, method: :get  do |f| %>
      <%= simple_form_for "", url: games_path, html: {class: "con-simple-form"}, method: :get  do |f| %>
        <%= f.input :name, placeholder: "Jeux", label: false %>
        <%= f.input :location, placeholder: "Ville", label: false %>
        <%= f.submit "Rechercher", id:"btn-search", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>

<div class="cards">
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag("dog", class: "card-img-top", alt:"Card image cap") %>
    <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
    <div class="card-body">
      <p class="card-text"><strong>Easy to use</strong>. Even your dog can book a game.</p>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag("money-bag", class: "card-img-top", alt:"Card image cap") %>
    <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
    <div class="card-body">
      <p class="card-text"><strong>Money saver</strong>. Make money with your games.</p>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag("environment", class: "card-img-top", alt:"Card image cap") %>
    <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
    <div class="card-body">
      <p class="card-text"><strong>Eco-friendly</strong>. Don't buy a new game to play it only once.</p>
    </div>
  </div>
</div>
